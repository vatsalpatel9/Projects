#ifndef COMMAND_WINDOW
#define COMMAND_WINDOW
#include <ncurses.h>
#include <string>
#include <iostream>
using namespace std;

class DebugWindow{
 private:
    WINDOW *debug;
    string contents;
    bool dodebug;

 public:
    DebugWindow(){
      int r, c;
      contents = "debug";
      getmaxyx(stdscr, r, c);
      debug = newwin(r,c,r-1,c);
      move(r-1,c);
      waddstr(debug,contents.c_str());
      wrefresh(debug);
      wgetch(debug);
    }

    //Turn debugging off
    void off() {
       dodebug = false;
    }

    //Turn debugging on
    void on() {
       dodebug = true;
    }
};
#endif
