#ifndef COMMAND_WINDOW
#define COMMAND_WINDOW
#include <ncurses.h>
#include <string>
#include <iostream>
using namespace std;

class DebugWindow{
 private:
    WINDOW *debug;
    string contents;
    bool dodebug;

 public:
    DebugWindow(){
      int r, c;
      getmaxyx(stdscr, r, c);
      debug = newwin(r,c,r-1,c);
      moveto(r-1,c);
i
      waddstr(debug, "debug:");
      wrefresh(debug);
      wgetch(debug);
    }








};
