using namespace std;
#include <iostream>
#include <iomanip>
#include <string>
#include <ncurses.h>
#include "DebugWindow.h"

DebugWindow debugWindow;
int main () {
   initscr();
   cbreak();

   string msg;
   msg = "Press Any Key to Continue";
   addstr(msg.c_str());
   refresh();
   getch();

   move(0,0);
   clear();
   refresh();

   debugWindow = DebugWindow();
   // Test 1 to check write(int) opperation
   addstr("73 should appear in debug window");
   refresh();
   debugWindow.write(73);// write 73 to debug window.
   debugWindow.pause();   

   endwin();
   return 0;
}

