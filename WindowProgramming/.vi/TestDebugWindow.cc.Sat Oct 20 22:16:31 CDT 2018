using namespace std;
#include <iostream>
#include <iomanip>
#include <string>
#include <ncurses.h>
#include "DebugWindow.h"

DebugWindow debugWindow;
int main () {
   initscr();
   cbreak();
   debugWindow = DebugWindow();
   string msg;
   msg = "Press Any Key to Continue";
   addstr(msg.c_str());
   refresh();
   getch();

   // Test 1 to check write opperation
   move(0,0);
   clear(); // clear the entire screen.
   refresh();
  // debugWindow.write(73);// write 73 to debug window.
   debugWindow.pause();   

   endwin();
   return 0;
}

