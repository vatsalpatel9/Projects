#ifndef COMMAND_WINDOW
#define COMMAND_WINDOW
#include <ncurses.h>
#include <string>
#include <iostream>
using namespace std;

class DebugWindow{
 private:
    WINDOW *debug;
    string contents;
    bool dodebug;

 public:
    //Creates a Debug window at the bottom of the screen
    DebugWindow(){
      contents = "Debug: ";
      int r, c;
      getmaxyx(stdscr, r, c);
      debug = newwin(r,c,r-1,0);
      wmove(debug, r,c);
      waddstr(debug, contents.c_str());
      wrefresh(debug);
      wgetch(debug);
    }

    //Turn debugging off
    void off() {
       dodebug = false;
    }

    //Turn debugging on
    void on() {
       dodebug = true;
    }

    // Print a string to the debig window
    void write(string s){
       waddstr(debug, s.c_str());
    }
};
#endif
