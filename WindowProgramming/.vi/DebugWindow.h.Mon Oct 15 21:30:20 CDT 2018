#ifndef COMMAND_WINDOW
#define COMMAND_WINDOW
#include <ncurses.h>
#include <string>
#include <iostream>
using namespace std;

class DebugWindow{
 private:
    WINDOW *debug;
    string contents;
    bool dodebug;

 public:
    DebugWindow(){
      int r, c;
      getmaxyx(stdscr, r, c);
      debug = newwin(r,c,r,c);
      wmove(debug, r,c);
      wprintw(debug, "debug: ");
      wrefresh(debug);
      wgetch(debug);
    }

    //Turn debugging off
    void off() {
       dodebug = false;
    }

    //Turn debugging on
    void on() {
       dodebug = true;
    }
};
#endif
